<GuiXml>
    <Controls>
        <TopLevelControl name="FreeSlotsUI" movable="true" mouseEnabled="true" clampedToScreen="true" >           
            <Anchor point="TOPLEFT" offsetX="0" offsetY="0" />
			<OnMoveStop>
				FreeSlots.OnMoveStop( self )
            </OnMoveStop>
            <OnUpdate>
                FreeSlots.OnUpdateHandler()
            </OnUpdate>
            <Controls>
                <Backdrop name="$(parent)BG" inherits="ZO_DefaultBackdrop" alpha="0.8" />
				
				<Label name="$(parent)Title" font="ZoFontGame" resizeToFitDescendents="true" fontSize="100" color="CFDCBD"  horizontalAlignment="LEFT" verticalAlignment="TOP" wrapMode="TRUNCATE" text="  Free Slots:">
					<AnchorFill />
					<Anchor  point="BOTTOMLEFT" offsetY="-75" />
                </Label>
				<!--
				<Texture name="MyAddonTexture" textureFile="MyAddonName/media/myTexture.dds">
					<AnchorFill />
					<Anchor  point="BOTTOMLEFT" offsetY="-75" />
				</Texture>-->
                <Label name="$(parent)Status" font="ZoFontGame" resizeToFitDescendents="true" fontSize="100" color="CFDCBD" wrapMode="ELLIPSIS" horizontalAlignment="RIGHT" verticalAlignment="TOP" text="">
					<AnchorFill />
					<Anchor  point="BOTTOMRIGHT" offsetX="-5" offsetY="-75"/>
                </Label>
				<Label name="$(parent)BankSlots" font="ZoFontGame" resizeToFitDescendents="true" fontSize="100" color="CFDCBD"  horizontalAlignment="LEFT" verticalAlignment="TOP" wrapMode="TRUNCATE" text="  Bank Slots:">
					<AnchorFill />
					<Anchor  point="BOTTOMLEFT" offsetY="-50" />
                </Label>				
                <Label name="$(parent)BankSlotsDisplay" font="ZoFontGame" resizeToFitDescendents="true" fontSize="100" color="CFDCBD" wrapMode="ELLIPSIS" horizontalAlignment="RIGHT" verticalAlignment="TOP" text="">
					<AnchorFill />
					<Anchor  point="BOTTOMRIGHT" offsetX="-5" offsetY="-50" />
                </Label>
				<Label name="$(parent)AlliancePoints" font="ZoFontGame" resizeToFitDescendents="true" fontSize="100" color="CFDCBD" wrapMode="ELLIPSIS" horizontalAlignment="LEFT" verticalAlignment="CENTER" text="  AP: ">
					<AnchorFill />
					<Anchor  point="BOTTOMLEFT" offsetY="-25" />
                </Label>
				<Label name="$(parent)AlliancePointsDisplay" font="ZoFontGame" resizeToFitDescendents="true" fontSize="100" color="00FF00" wrapMode="ELLIPSIS" horizontalAlignment="RIGHT" verticalAlignment="CENTER" text="100000">
					<AnchorFill />
					<Anchor  point="BOTTOMRIGHT" offsetX="-5" offsetY="-25" />
                </Label>
				<Label name="$(parent)CurrentGold" font="ZoFontGame" resizeToFitDescendents="true" fontSize="100" color="CFDCBD" wrapMode="ELLIPSIS" horizontalAlignment="LEFT" verticalAlignment="MIDDLE" text="  Gold:">
					<AnchorFill />
					<Anchor  point="BOTTOMLEFT" offsetY="-0" />
                </Label>
				<Label name="$(parent)CurrentGoldDisplay" font="ZoFontGame" resizeToFitDescendents="true" fontSize="100" color="FFFF00" wrapMode="ELLIPSIS" horizontalAlignment="RIGHT" verticalAlignment="BOTTOM" text="100000">
					<AnchorFill />
					<Anchor  point="BOTTOMRIGHT" offsetX="-5" offsetY="-0" />
                </Label>
            </Controls>
        </TopLevelControl>
    </Controls>
</GuiXml>
